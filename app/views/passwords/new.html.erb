<div id="clearance" class="password-reset bg-gray-200 w-full">
  <div class="max-w-sm mx-auto pt-32 px-4 h-screen">
    <div class="bg-white rounded border-transparent overflow-hidden shadow-md">
      <div class="bg-gray-800 text-gray-500 px-5 py-3">
        <h1 class="text-lg text-center uppercase"><%= t(".title") %></h1>
      </div>

      <section class="py-8 px-6">
        <p class="mb-5"><%= t(".description") %></p>

        <%= simple_form_for :password, url: passwords_path do |form| %>
          <%= form.input :email, as: :email, autofocus: true %>
          <%= submit_button f: form,
                            text: 'Reset password',
                            icon: false,
                            class: 'block w-full' %>
        <% end %>

        <div class="other-links mt-3 flex content-between">
          <% if signed_in? %>
            <%= link_to "Back", :back, class: 'block link' %>
          <% else %>
            <%= link_to t(".sign_in"), sign_in_path, class: 'block link' %>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>
