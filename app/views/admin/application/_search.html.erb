<form class="search" role="search">
  <div class="flex items-center bg-gray-300 rounded">
    <label class="search__label" for="search">
      <%= fa_icon 'search', icon_class: 'fa-fw mx-2 text-gray-500' %>
      <%# TODO: add title: t("administrate.search.label", resource: resource_name) to icon? %>
    </label>

    <input class="search__input bg-gray-300 appearance-none border-2 border-gray-300
                rounded w-full py-2 text-gray-800 leading-tight
                focus:outline-none focus:bg-white focus:border-gray-300"
           id="search"
           type="text"
           name="search"
           placeholder="<%= t("administrate.search.label",
                              resource: resource_name) %>"
           value="<%= search_term %>"
           autofocus>

    <% if search_term.present? %>
      <%= link_to clear_search_params, class: "search__clear-" do %>
        <%= fa_icon 'times', icon_class: 'fa-fw mx-2' %>
      <% end %>
    <% end %>
  </div>
</form>
