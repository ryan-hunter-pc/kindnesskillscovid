<!DOCTYPE html>
<html>
<head>
  <title>Kindness Kills COVID-19</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="font-sans min-h-screen bg-gray-300">
<header>
  <%= render 'layouts/messages' %>
  <div class="h-32 lg:h-64 bg-gray-700">
    <h1 class="pt-6 lg:pt-12 text-center text-2xl lg:text-6xl uppercase tracking-wide text-gray-500">
      <%= link_to 'Kindness Kills COVID-19', root_path %>
    </h1>
  </div>
</header>

<main role="main" class="max-w-5xl mx-2 lg:mx-auto -mt-12 bg-white rounded shadow-lg p-6">
  <%= yield %>
</main>

<footer>
  <div class="max-w-5xl mx-auto flex items-center justify-between p-4">
    <% if signed_in? %>
      <%= link_to 'Sign out', sign_out_path, method: :delete, class: 'link link-gray' %>
    <% else %>
      <% if current_page?(sign_in_path) %>
        <%= link_to 'Back to Home Page', root_path, class: 'link link-gray' %>
      <% else %>
        <p>Already have an account?</p>
        <%= link_to fa_icon('arrow-right', text: 'Sign In', right: true),
                    sign_in_path,
                    class: 'link link-primary' %>
      <% end %>
    <% end %>
  </div>
</footer>
</body>
</html>
